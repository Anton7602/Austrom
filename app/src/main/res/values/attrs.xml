<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SettingsButtonView">
        <attr name="primaryText" format="string" />
        <attr name="secondaryText" format="string" />
        <attr name="settingIcon" format="reference" />
    </declare-styleable>
    <declare-styleable name="TransactionHeaderView">
        <attr name="IncomeSum" format="float" />
        <attr name="ExpenseSum" format="float" />
        <attr name="CurrencySymbol" format="string" />
    </declare-styleable>
    <declare-styleable name="ActionButtonView">
        <attr name="Icon" format="reference"/>
        <attr name="ButtonText" format="string"/>
        <attr name="isCheckable" format="boolean"/>
        <attr name="isChecked" format="boolean"/>
        <attr name="isDisabled" format="boolean"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="borderColor" format="color"/>
        <attr name="backgroundColorDisabled" format="color"/>
        <attr name="borderColorDisabled" format="color"/>
        <attr name="isBorderVisible" format="boolean"/>
        <attr name="textColor" format="color"/>
        <attr name="iconTint" format="color"/>
        <attr name="iconTintDisabled" format="color"/>
    </declare-styleable>
    <declare-styleable name="SelectorButtonView">
        <attr name="fieldName" format="string" />
        <attr name="fieldValue" format="string" />
    </declare-styleable>

    <declare-styleable name="PieChartDiagramView">
        <attr name="pieChartMarginTextFirst" format="dimension"/>
        <attr name="pieChartMarginTextSecond" format="dimension"/>
        <attr name="pieChartMarginTextThird" format="dimension"/>
        <attr name="pieChartMarginSmallCircle" format="dimension"/>
        <attr name="pieChartCircleStrokeWidth" format="dimension"/>
        <attr name="pieChartCirclePadding" format="dimension"/>
        <attr name="pieChartCirclePaintRoundSize" format="boolean"/>
        <attr name="pieChartCircleSectionSpace" format="float"/>
        <attr name="pieChartTextCircleRadius" format="dimension"/>
        <attr name="pieChartTextAmountSize" format="dimension"/>
        <attr name="pieChartTextNumberSize" format="dimension"/>
        <attr name="pieChartTextDescriptionSize" format="dimension"/>
        <attr name="pieChartTextAmountColor" format="color"/>
        <attr name="pieChartTextNumberColor" format="color"/>
        <attr name="pieChartTextDescriptionColor" format="color"/>
        <attr name="pieChartTextAmount" format="string"/>
    </declare-styleable>

    <declare-styleable name="MoneyFormatTextView">
        <attr name="moneyPadding" format="dimension"/>
        <attr name="amountSize" format="dimension"/>
        <attr name="currencySize" format="dimension"/>
        <attr name="currencyMargin" format="dimension"/>
        <attr name="amountColor" format="color"/>
        <attr name="currencyColor" format="color"/>
        <attr name="defaultAmount" format="float"/>
        <attr name="currencyTextSizePercent" format="float"/>
        <attr name="horizontalAlignment" format="enum">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="verticalAlignment" format="enum">
            <enum name="top" value="0"/>
            <enum name="center" value="1"/>
            <enum name="bottom" value="2"/>
        </attr>
    </declare-styleable>
</resources>