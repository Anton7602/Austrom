<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ctdial2_holder_crv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/navigationBarColor"
    app:cardCornerRadius="20dp"
    tools:context=".dialogs.TransactionCreationDialogFragment2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctdial2_stage1Layout_cly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ctdial2_foreignName_til"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/ctdial2_forward_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ctdial2_foreignName_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Target" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ctdial2_foreignName_til"
            tools:listitem="@layout/item_asset" />

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner2" />

        <ImageButton
            android:id="@+id/ctdial2_forward_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:contentDescription="Forward"
            android:padding="12dp"
            android:src="@drawable/ic_navigation_forward_temp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/ctdial2_foreignName_til"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ctdial2_foreignName_til"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctdial2_stage2Layout_cly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source/Target"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Transaction Amount"
            android:textColor="@color/dark_grey"
            app:layout_constraintEnd_toEndOf="@+id/textView23"
            app:layout_constraintStart_toStartOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeTextType="uniform"
            android:text="100 000.00 RUB"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintDimensionRatio="8:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView25" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView23"
            tools:listitem="@layout/item_asset" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/qapdial_button1_btn"
                    style="@style/QuickAuthorizationKeyboardButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    app:cornerRadius="16dp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/qapdial_button2_btn"
                    style="@style/QuickAuthorizationKeyboardButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2"
                    app:cornerRadius="16dp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/qapdial_button3_btn"
                    style="@style/QuickAuthorizationKeyboardButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="3"
                    app:cornerRadius="16dp"
                    tools:ignore="HardcodedText" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/qapdial_button4_btn"
                    style="@style/QuickAuthorizationKeyboardButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="4"
                    app:cornerRadius="16dp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/qapdial_button5_btn"
                    style="@style/QuickAuthorizationKeyboardButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="5"
                    app:cornerRadius="16dp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/qapdial_button6_btn"
                    style="@style/QuickAuthorizationKeyboardButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="6"
                    app:cornerRadius="16dp"
                    tools:ignore="HardcodedText" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/qapdial_button7_btn"
                    style="@style/QuickAuthorizationKeyboardButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="7"
                    app:cornerRadius="16dp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/qapdial_button8_btn"
                    style="@style/QuickAuthorizationKeyboardButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="8"
                    app:cornerRadius="16dp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/qapdial_button9_btn"
                    style="@style/QuickAuthorizationKeyboardButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="9"
                    app:cornerRadius="16dp"
                    tools:ignore="HardcodedText" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/qapdial_buttonRemove_btn"
                    style="@style/QuickAuthorizationKeyboardButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_input_delete"
                    app:cornerRadius="16dp"
                    app:tint="@color/black" />

                <Button
                    android:id="@+id/qapdial_button0_btn"
                    style="@style/QuickAuthorizationKeyboardButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    app:cornerRadius="16dp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button11"
                    style="@style/QuickAuthorizationKeyboardButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="."
                    app:cornerRadius="16dp" />

            </TableRow>
        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>