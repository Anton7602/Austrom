<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryCreationActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/navigationBarColor"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/catcr_categoryIcon_rcv" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/catcr_categoryName_til"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/catcr_negativeResult_btn"
        app:layout_constraintStart_toEndOf="@+id/catcr_categoryIcon_img"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/catcr_categoryName_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/category_name" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/catcr_categoryIcon_rcv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:clickable="true"
        android:contentDescription="Icon Holder"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catcr_categoryName_til"
        tools:ignore="HardcodedText"
        tools:listitem="@layout/item_category_icon">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageButton
        android:id="@+id/catcr_categoryIcon_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/catcr_categoryName_til"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/catcr_categoryName_til"
        app:srcCompat="@drawable/ic_placeholder_icon" />

    <ImageButton
        android:id="@+id/catcr_negativeResult_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/sh_icon_background"
        android:backgroundTint="@color/expenseRed"
        app:layout_constraintBottom_toBottomOf="@+id/catcr_positiveResult_btn"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toStartOf="@+id/catcr_positiveResult_btn"
        app:layout_constraintTop_toTopOf="@+id/catcr_positiveResult_btn"
        app:srcCompat="@drawable/ic_navigation_close_temp" />

    <ImageButton
        android:id="@+id/catcr_positiveResult_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/sh_icon_background"
        android:backgroundTint="@color/incomeGreen"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/catcr_categoryIcon_img"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/catcr_categoryIcon_img"
        app:srcCompat="@drawable/ic_navigation_done_temp" />

</androidx.constraintlayout.widget.ConstraintLayout>