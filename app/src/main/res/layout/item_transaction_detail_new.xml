<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trdetit_transactionDetailHolder_lly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="1dp"
    android:paddingTop="1dp"
    android:paddingEnd="1dp"
    android:paddingBottom="1dp">

    <TextView
        android:id="@+id/trdetit_itemName_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:maxLines="1"
        android:paddingVertical="2dp"
        android:text="ItemName"
        android:textAppearance="@style/SecondaryCardTextAutoscale"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />

            <LinearLayout
                android:id="@+id/trdetit_quantityHolder_lly"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trdetit_quantity_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0.15"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp"
                    android:visibility="visible"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/trdetit_quantityType_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="KG"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp"
                    android:visibility="visible"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

    <com.colleagues.austrom.views.MoneyFormatTextView
        android:id="@+id/trdetit_cost_monf"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        app:amountColor="@color/secondaryTextColor"
        app:currencyColor="@color/secondaryTextColor"
        app:currencyTextSizePercent="0.9"
        app:defaultAmount="1234.56"
        app:horizontalAlignment="right" />
</LinearLayout>