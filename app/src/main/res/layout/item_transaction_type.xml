<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ittrantype_assetTypeHolder_lly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/ittrantype_assetTypeIcon_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="12dp"
        app:srcCompat="@drawable/img_income_icon"
        app:tint="@color/black" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingHorizontal="4dp"
        android:paddingVertical="6dp">

        <TextView
            android:id="@+id/ittranstype_assetTypeName_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/income"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ittranstype_assetTypeDescr_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="@string/card_desc"
            android:textColor="@color/dark_grey"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>