<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialogs.CategoryControlDialogFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/ccdial_holder_crv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/ccdial_transactiontype_crv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/ccdial_expence_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:text="@string/expense"
                        android:textColor="@color/black"
                        app:cornerRadius="0dp"
                        app:layout_constraintEnd_toStartOf="@+id/ccdial_income_btn"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/divider17"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="@color/dark_grey"
                        app:layout_constraintBottom_toBottomOf="@+id/ccdial_expence_btn"
                        app:layout_constraintEnd_toEndOf="@+id/ccdial_expence_btn"
                        app:layout_constraintStart_toEndOf="@+id/ccdial_expence_btn"
                        app:layout_constraintTop_toTopOf="@+id/ccdial_expence_btn" />

                    <Button
                        android:id="@+id/ccdial_income_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:text="@string/income"
                        android:textColor="@color/black"
                        app:cornerRadius="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/ccdial_expence_btn"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/ccdial_addNew_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:text="@string/add_new_category"
                        android:textColor="@color/black"
                        app:cornerRadius="0dp"
                        app:layout_constraintEnd_toEndOf="@+id/ccdial_income_btn"
                        app:layout_constraintStart_toStartOf="@+id/ccdial_expence_btn"
                        app:layout_constraintTop_toBottomOf="@+id/ccdial_expence_btn" />

                    <View
                        android:id="@+id/divider18"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dark_grey"
                        app:layout_constraintBottom_toTopOf="@+id/ccdial_addNew_btn"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ccdial_expenseCategories_rcv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ccdial_transactiontype_crv"
                tools:listitem="@layout/item_category_new" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ccdial_incomeCategories_rcv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ccdial_transactiontype_crv"
                tools:listitem="@layout/item_category_new" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>