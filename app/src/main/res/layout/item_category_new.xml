<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itcatnew_categoryHolder_lly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/itcatnew_categoryIcon_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        app:srcCompat="@drawable/ic_placeholder_icon" />

    <TextView
        android:id="@+id/itcatnew_categoryName_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="CategoryName"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/itcatnew_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="12dp"
        android:tint="@color/grey"
        app:srcCompat="@drawable/ic_navigation_edit_temp" />

    <ImageButton
        android:id="@+id/itcatnew_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="12dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_navigation_close_temp" />
</LinearLayout>